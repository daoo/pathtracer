#!/usr/bin/env bash

CXX="clang++" CXXFLAGS="-Weverything -Wno-missing-prototypes -Wno-c++98-compat -Wno-padded -Wno-weak-vtables -Wno-exit-time-destructors -g -Xclang -fcolor-diagnostics" \
  meson "out_clang_debug"

CXX="clang++" CXXFLAGS="-Ofast -march=native -DNDEBUG" \
  meson "out_clang_release"

CXX="clang++" CXXFLAGS="-Wall -g -fsanitize=address,undefined" LDFLAGS="-fsanitize=address,undefined" \
  meson "out_clang_sanitize"

CXX="g++" CXXFLAGS="-Wall -Wextra -Weffc++ -Wno-padded -g -fdiagnostics-color=always" \
  meson "out_gcc_debug"

CXX="g++" CXXFLAGS="-Ofast -march=native -flto -DNDEBUG" LDFLAGS="-flto" \
  meson "out_gcc_release"
